<Window x:Class="NettoyeurDisque.AnalyseProgression"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Progression de l'analyse" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Analyse en cours..." FontSize="16" Margin="0,0,0,10" x:Name="MessageProgression"/>
            <ProgressBar x:Name="BarreProgression" Width="300" Height="20" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="MessageFinal" Text="" FontSize="14" Foreground="Green" Margin="0,10,0,0" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
